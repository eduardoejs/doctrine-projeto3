{% extends "layout.twig" %}
{% block local %}Alterar produto{% endblock %}

{% block content %}
    <div class="jumbotron">

        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>NOME</th>
                <th>DESCRIÇÃO</th>
                <th>VALOR</th>
                <th></th>
                <th>AÇÕES</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <form action="{{ path('update', {id:produto.id}) }}" method="post">
                    <td>{{ produto.id }}</td>

                    <td style="width: 10px;"><input type="text" name="nome" value="{{ produto.nome }}"></td>
                    <td style="width: 10px;"><input type="text" name="descricao" value="{{ produto.descricao }}"></td>
                    <td style="width: 10px;"><input type="text" name="valor" value="{{ produto.valor }}"></td>

                    <td><button class="btn btn-success " type="submit" name="alterar" >Alterar</button></td>

                    <td>
                        <select class="form-control" name="categoria_produto" id="categoria_produto">
                            {% for categoria in categorias %}
                                <option value={{ categoria.id }}>{{ categoria.nome_categoria }}</option>
                            {% endfor %}
                        </select>
                    </td>

                    <td>
                        <select name="tags_produto[]" size="3" multiple="multiple" tabindex="1" style="width: 130px;">
                            {% for tag in tags %}
                                <option value={{ tag.id }}>{{ tag.nome_tag }}</option>
                            {% endfor %}
                        </select>
                    <td>
                    <input type="hidden" name="id" value="{{ produto.id }}" />
                </form>
            </tr>
            </tbody>
        </table>
        <a href="{{ path('index') }}"><button class="btn btn-info " type="submit" name="voltar" >Voltar</button></a>
    </div><!-- /jumbotron -->
{% endblock %}