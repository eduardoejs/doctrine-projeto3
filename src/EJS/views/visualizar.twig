{% extends "layout.twig" %}
{% block local %}Visualizar produto{% endblock %}

{% block content %}
    <div class="jumbotron">
        <a href="{{ path('index') }}"><button class="btn btn-warning " type="submit" name="voltar" >Voltar para lista de produtos</button></a>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>NOME</th>
                <th>DESCRIÇÃO</th>
                <th>VALOR</th>
                <th>CATEGORIA</th>
                <th>TAGs</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ produto.id }}</td>
                <td>{{ produto.nome }}</td>
                <td>{{ produto.descricao }}</td>
                <td>{{ produto.valor }}</td>
                {% if produto.categoria.nome_categoria is defined %}
                    <td>{{ produto.categoria.nome_categoria }}</td>
                {% else %}
                    <td></td>
                {% endif %}


                {% if produto.tags is defined %}
                    <td>
                        {% for tag in produto.tags %}
                            <li >{{ tag.nome_tag }}</li>
                        {% endfor %}
                    </td>
                {% endif %}

            </tr>
            </tbody>
        </table>
        {% if produto.file != null %}
            <img src="/uploads/images/{{ produto.file }}"/>
        {% endif %}

    </div><!-- /jumbotron -->
{% endblock %}