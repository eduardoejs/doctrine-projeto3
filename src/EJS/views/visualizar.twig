{% extends "layout.twig" %}
{% block local %}Visualizar produto{% endblock %}

{% block content %}
    <div class="jumbotron">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>NOME</th>
                <th>DESCRIÇÃO</th>
                <th>VALOR</th>
                <th>CATEGORIA</th>
                <th>TAGs</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ produto.id }}</td>
                <td>{{ produto.nome }}</td>
                <td>{{ produto.descricao }}</td>
                <td>{{ produto.valor }}</td>
                <td>{{ produto.categoria.nome_categoria }}</td>
                <td>
                    {% for tag in produto.tags %}
                        <li >{{ tag.nome_tag }}</li>
                    {% endfor %}
                </td>
            </tr>
            </tbody>
        </table>
        <a href="{{ path('index') }}"><button class="btn btn-warning " type="submit" name="voltar" >Voltar para lista de produtos</button></a>
    </div><!-- /jumbotron -->
{% endblock %}